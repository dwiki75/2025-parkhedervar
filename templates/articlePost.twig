{% extends "_layout_parkh" %}

{# % set pageTitle =  entry.title % #}
{% block menu %}
  {% include './includes/_menuIn' %}
{% endblock %}


{% set pageTitle =  entry.title %}



{% block main %}

{% if entry.type.handle == 'article' %}
<div class="w-full my-auto mx-auto">
    {% for block in entry.pictText.all() %}
      {% include '_modules/' ~ block.type  %}
    {% endfor %}
</div>

{% endif %}

{% if entry.type.handle == 'new' %}
<div class="w-full my-auto mx-auto">
    {% for block in entry.pictText.all() %}
      {% include '_modules/' ~ block.type  %}
    {% endfor %}
</div>

{% endif %}

{% set whatLocal = craft.app.language %}
{% if whatLocal == 'hu' %}

<div id="booking" class="w-full bg-lightbrown">
        <div class="max-w-8xl mx-auto">
               <h2 class="text-2xl md:text-5xl mx-6 mt-10 inline-block">{{ "Table reservation"|t }}</h2>

          <!-- Foglalási űrlap -->



          {# % include './includes/_form'% #}

        </div>
{% endif %}

</div>





<script>
  document.addEventListener("DOMContentLoaded", function () {
    const link = document.querySelector(".bookingLink");
    const target = document.querySelector("#booking");

    if (link && target) {
      link.addEventListener("click", function (e) {
        e.preventDefault(); // ne ugorjon el
        target.scrollIntoView({
          behavior: "smooth",
          block: "start"
        });
      });
    }
  });
</script>


{# % elseif entry.type.handle == 'galeria' %}
<div class="max-w-8xl my-auto mx-auto pt-10">
   <h2 class="max-w-8xl mx-auto my-10 px-2 sm:px-4 md:px-8 text-2xl md:text-5xl">{{ entry.title }}</h2>
          {% include './includes/_gallery' %}
</div>

<div id="tour" class="max-w-8xl  mx-auto">
      <div class="w-full flex-shrink-0">
        <div class="relative w-full pb-[50%] h-0 overflow-hidden 
                    [&_iframe]:absolute [&_iframe]:top-0 [&_iframe]:left-0 
                    [&_iframe]:w-full [&_iframe]:h-full [&_iframe]:border-0">
              {{ entry.simpleText|raw }}
      </div> 
    </div> 
</div> 



{% endif % #}


{% endblock %}  

