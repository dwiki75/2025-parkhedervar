{# templates/includes/_pagination.twig #}
<nav class="mt-10 flex justify-center items-center gap-3" role="navigation" aria-label="{{ 'Oldalak'|t }}">
  {# Előző #}
  {% if paginate.prevUrl %}
    <a href="{{ paginate.prevUrl }}"
       class="px-3 py-2 rounded-md bg-gray-100 hover:bg-gray-200 text-sm text-gray-700">
      ‹ {{ 'Előző'|t }}
    </a>
  {% endif %}

  {# Oldalszámok #}
  {% for page in 1..paginate.totalPages %}
    {% set url = paginate.getPageUrl(page) %}
    <a href="{{ url }}"
       class="px-3 py-2 rounded-md text-sm font-medium {{ page == paginate.currentPage ? 'bg-primary text-white' : 'bg-gray-100 hover:bg-gray-200 text-gray-700' }}">
      {{ page }}
    </a>
  {% endfor %}

  {# Következő #}
  {% if paginate.nextUrl %}
    <a href="{{ paginate.nextUrl }}"
       class="px-3 py-2 rounded-md bg-gray-100 hover:bg-gray-200 text-sm text-gray-700">
      {{ 'Következő'|t }} ›
    </a>
  {% endif %}
</nav>
