{# includes/_newsCard.twig #}

{% set asset = item.onePict.one() %}
{% set img = asset ? asset.getUrl({
  mode: 'crop',
  width: 1280, height: 960,
  position: 'center-center'
}) : null %}

<article class="bg-primary text-white rounded-xl overflow-hidden shrink-0 basis-[85%] md:basis-auto md:shrink snap-start">
  {% if img %}
    <img src="{{ img }}" alt="{{ asset.title ?? item.title }}"
         class="w-full aspect-[4/3] object-cover">
  {% endif %}

  <div class="p-4 flex flex-col gap-2">
    <h3 class="text-lg text-thirdy">{{ item.title }}</h3>

    {% if item.simpleText %}
      <p class="text-sm leading-relaxed line-clamp-4">
        {{ item.simpleText }}
      </p>
    {% endif %}

    <a href="{{ item.url }}"
       class="mt-3 self-start w-auto whitespace-nowrap inline-flex items-center gap-2 px-3 py-1.5 rounded-full
              bg-white/20 hover:bg-white/30 text-sm font-medium text-white transition"
       aria-label="{{ 'Bővebben'|t }}">
      {{ 'Bővebben'|t }}
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
        <path d="M7 5l5 5-5 5"/>
      </svg>
    </a>
  </div>
</article>
