{% extends "_layout_parkh" %}

{% block menu %}
  {% include './includes/_menuIn' %}
{% endblock %}

{% block main %}
{% set perPage = 6 %}
{% paginate craft.entries()
  .section('news')
  .type('new')
  .with(['onePict'])
  .orderBy('postDate desc')
  .limit(perPage)
as pageInfo, news %}

  <section id="news-list" class="py-10" aria-labelledby="news-list-title">
    <div class="max-w-8xl mx-auto px-4 sm:px-6">

      <div class="mb-8 text-center">
        <h1 id="news-list-title" class="text-3xl md:text-4xl text-primary">{{ 'Hírek'|t }}</h1>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6" role="list" aria-label="{{ 'Hírek'|t }}">
        {% for item in news %}
          {% include 'includes/_newsCard.twig' with { item: item } %}
        {% else %}
          <p class="col-span-full text-center text-gray-500">{{ 'Nincs megjeleníthető hír.'|t }}</p>
        {% endfor %}
      </div>

        {% if pageInfo.totalPages > 1 %}
        {% include 'includes/_pagination.twig' with { paginate: pageInfo } %}
        {% endif %}
    </div>
  </section>
{% endblock %}
