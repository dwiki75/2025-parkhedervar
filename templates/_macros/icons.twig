{# templates/_macros/icons.twig #}

{% macro icon(name, set = 'heroicons', classes = '', decorative = true) %}
  {% set path = 'includes/icons/' ~ set ~ '/' ~ name ~ '.svg' %}

  {% set svg %}
    {% include path ignore missing %}
  {% endset %}

  {# 
    - minden svg kap class-t
    - ha decorative == true: aria-hidden + focusable + role="img"
    - ha decorative == false: a hívónak kell szöveget/sr-only feliratot adni
  #}
  {% set attr = decorative 
      ? 'aria-hidden="true" focusable="false" role="img"' 
      : 'role="img"' 
  %}

  {{ svg
      |replace('<svg ', '<svg class="' ~ classes ~ '" ' ~ attr ~ ' ')
      |raw 
  }}
{% endmacro %}
