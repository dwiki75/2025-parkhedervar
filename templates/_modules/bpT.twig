{# Bejárás a pictText mezőn belül #}


{% if block.type == 'bpT' %}
  {% set isImageLeft = block.switch %}
  {% set image = block.image.one() %}

    {% if image %}
<div class="w-full mx-auto bg-thirdy"> 
    <div class="max-w-8xl mx-auto">
        <div class="w-full relative flex flex-col md:flex-row mb-15 bg-thirdy">
          
                    {# Kép blokk - 55% széles #}
                    <div class="w-full md:w-[55%] {{ isImageLeft ? 'md:order-1' : 'md:order-2' }}">
                        <img 
                        src="{{ image.getUrl(thumb1024x940crop) }}"
                        alt="{{ image.title }}"
                        class="w-full h-auto object-cover"
                        >
                    </div>

                    {# Szövegdoboz #}
                <div class="
                relative md:absolute
                w-[90%] md:w-1/2
                mx-auto md:mx-0
                my-6 md:my-0
                top-0 md:top-1/2
                md:-translate-y-1/2
                {{ isImageLeft ? 'md:left-[10%]' : 'md:right-[10%]' }}
                p-8 sm:p-20
                bg-white shadow-xl
                rounded-lg md:rounded-3xl
                ">
                {% if block.title %}
                    <h2 class="text-2xl sm:text-3xl  mb-4">{{ block.title }}</h2>
                {% endif %}
                {% if block.textBox %}
                    <div class="prose max-w-none [&_h3]:text-lg [&_h3]:font-normal [&_h3]:sm:text-2xl [&_h3]:text-secondary [&_h3]:mb-2">
                    {{ block.textBox | raw }}
                    </div>
                {% endif %}
                </div>
            </div>   
        </div>
 </div>      
    {% endif %}
{% endif %}
