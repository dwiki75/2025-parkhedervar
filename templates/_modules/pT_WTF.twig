    {% if block.type == 'pT' %}
      {% set isImageLeft = block.switch %}
      {% set hasExtraRound = block.extraRound %}

      {# Képtömb #}
      {% set images = block.image.all() %}
      {% set mainImage = images|length >= 1 ? images[0] : null %}
      {% set smallImage = images|length >= 2 ? images[1] : null %}

      {% if mainImage %}
        {% set isPortrait = mainImage.height > mainImage.width %}
        {% if isPortrait %}
          {% set mainTransform = thumb640Hcrop %}
          {% set mainImageWidthClass = 'md:w-[40%]' %}
          {% set textWidthClass = 'md:w-[60%]' %}
        {% else %}
          {% set mainTransform = thumb1024crop %}
          {% set mainImageWidthClass = 'md:w-1/2' %}
          {% set textWidthClass = 'md:w-1/2' %}
        {% endif %}
      {% endif %}

      {# Flex sorrend desktopon #}
      {% set imageOrder = isImageLeft ? 'md:order-1' : 'md:order-2' %}
      {% set textOrder = isImageLeft ? 'md:order-2' : 'md:order-1' %}

      {# Alap lekerekítés #}
      {% set imageRoundedClass = 'rounded-xl' %}
      {% if hasExtraRound %}
        {% if isImageLeft %}
          {% set imageRoundedClass = imageRoundedClass ~ ' rounded-tr-[6rem] md:rounded-tr-[12rem]' %}
        {% else %}
          {% set imageRoundedClass = imageRoundedClass ~ ' rounded-tl-[6rem] md:rounded-tl-[12rem]' %}
        {% endif %}
      {% endif %}
<div class="max-w-8xl  mx-auto"> 
      <div class="flex flex-col md:flex-row md:items-center p-5 mb-1 sm:mb-[5%]">
        
        {# Kép blokk #}
        <div class="relative overflow-visible w-full {{ mainImageWidthClass }} {{ imageOrder }}">
          {% if mainImage %}
            <img 
              src="{{ mainImage.getUrl(mainTransform) }}"
              alt="{{ mainImage.title }}"
              class="w-full h-auto object-cover {{ imageRoundedClass }}"
            >
          {% endif %}

          {% if smallImage %}
            {# Kis kép mobilon: simán alatta #}
            <div class="block md:hidden mt-4 {{ isImageLeft ? 'text-left' : 'text-right' }}">
              <img 
                src="{{ smallImage.getUrl(thumb640crop) }}"
                alt="{{ smallImage.title }}"
                class="w-full h-auto rounded-xl"
              >
            </div>

            {# Kis kép desktopon: rálógatva #}
            <img 
              src="{{ smallImage.getUrl(thumb640crop) }}"
              alt="{{ smallImage.title }}"
              class="
                hidden md:block
                absolute
                w-[40%]
                h-auto
                top-[80%]
                {{ isImageLeft ? 'left-10' : 'right-10' }}
                rounded-xl
              "
            >
          {% endif %}
        </div>

        {# Szöveges blokk - új responsive padding #}
 
        <div class="w-full {{ textWidthClass }} p-4 pt-8 sm:pt-12 sm:p-12 {{ textOrder }}">
          {% if block.title %}
            <h2 class="text-3xl sm:text-6xl  mb-4">{{ block.title }}</h2>
          {% endif %}
          {% if block.subTitle %}
            <h3 class="text-2xl sm:text-3xl  mb-4 text-secondary">{{ block.subTitle }}</h3>
          {% endif %}
          {% if block.textBox %}
            <div class="prose max-w-none mb-4 [&_h3]:text-lg [&_h3]:sm:text-2xl [&_li]:list-disc [&_li]:list-outside [&_li]:ml-10 [&_li]:mt-1">
              {{ block.textBox | raw }}
            </div>
          {% endif %}
          {% set entryButton = block.button.one() %}
          {% if entryButton %}
            <div class="my-2">
              <a href="{{ entryButton.url }}" class="bg-primary text-white px-6 py-2 rounded-full inline-flex items-center gap-2 hover:bg-primary/90 transition">
                {{ entryButton.title }}
                <span class="w-4 h-4 [&_svg]:w-full [&_svg]:h-full">
                  {% include 'includes/icons/heroicons/arrow-right.svg' %}
                </span>
              </a>
            </div>
          {% endif %}
  


        </div>

 

      </div>
 </div>     
    {% endif %}